<div>
  <div class="px-4 text-center">
  <div>
    <h1>
      Start a new alteration
    </h1>
  </div>
</div>

<hr>
<div class="px-4 text-center">
<div>
  <div>
    <h2>
      Add a new message
    </h2>

     <div>
      <label for="photo_box">
        Photo
      </label>
      <form action="/create_user" method="post" class="form-horizontal" enctype="multipart/form-data">
       <input type="file" id="photo" name="photo" class="form-control">
    </div>

    <form action="/insert_message" method="post">
      <div>
        <label for="content_box">
          Content
        </label>

        <textarea id="content_box" name="query_content" rows="2"></textarea>
      </div>


      <div>
        <label for="sender_id_box">
          Sender
        </label>
        

        <input type="text" id="sender_id_box" name="query_sender_id">
      </div>

      <div>
        <label for="ticket_id_box">
          Ticket
        </label>

        <input type="text" id="ticket_id_box" name="query_ticket_id">
      </div>

      <button>
        Create message
      </button>
    </form>
  </div>
</div>


      <% @list_of_messages.each do |a_message| %>
      <tr>
        <td>
          <%= a_message.id %>
        </td>

        <td>
          <%= a_message.content %>
        </td>

        <td>
          <%= a_message.photo %>
        </td>

        <td>
          <%= a_message.sender_id %>
        </td>

        <td>
          <%= a_message.ticket_id %>
        </td>

        <td>
          <%= time_ago_in_words(a_message.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_message.updated_at) %> ago
        </td>

        <td>
          <a href="/messages/<%= a_message.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
  </div>
  </div>
</div>
